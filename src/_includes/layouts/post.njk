<head>
  <meta charset="UTF-8">
  
  <title>{{ title }}</title>
  <meta name="title" content="{{ title }}">
  <meta name="description" content="{{ description }}">

  <meta property="og:type" content="website">
  <meta property="og:site_name" content="Sargent Coding Docs" />
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ description }}">
  {% if image %}
    <meta property="og:image" content="{{ image }}">
  {% endif %}

  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:site_name" content="Sargent Coding Docs" />
  <meta property="twitter:title" content="{{ title }}">
  <meta property="twitter:description" content="{{ description }}">
  {% if image %}
    <meta property="twitter:image" content="{{ image }}">
  {% endif %}
  
  <meta name="theme-color" content="#2255dd" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="google-site-verification" content="Ezpz_9GMDJQ89Hk1mpeBhZmqM_ZYbYPTVVMJsMPD4is" />
  
  <link rel="stylesheet" href="/public/style.css" />
  <link
    rel="icon"
    type="image/png"
    href="https://cdn.glitch.me/dc38f52f-de50-4241-b0b3-d10b915c70ac%2FFrame%201%20(1).png"
  />
</head>

<main>
  <a href="/">Sargent Coding Documentation</a>
  <top>
    <h1>{{ title }}</h1>
    <p>Written on {{ date | htmlDateString }} by {{ author }}.</p>
  </top>
  <!--<div id="about">ℹ️&ensp;{{ description }}</div>-->
  {{ content | safe }}
</main>